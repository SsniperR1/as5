<%- include('partials/navbar', { page: '/solutions/addProject' }) %>

<h1>Add Project</h1>

<form method="POST" action="/solutions/addProject">
  <label>Title: <input type="text" name="title" required></label><br>
  <label>Feature Image URL: <input type="url" name="feature_img_url" required></label><br>
  <label>Sector:
    <select name="sector_id" required>
      <% sectors.forEach(sector => { %>
        <option value="<%= sector.id %>"><%= sector.sector_name %></option>
      <% }) %>
    </select>
  </label><br>
  <label>Intro Short: <textarea name="intro_short" required></textarea></label><br>
  <label>Summary Short: <textarea name="summary_short" required></textarea></label><br>
  <label>Impact: <textarea name="impact" required></textarea></label><br>
  <label>Original Source URL: <input type="url" name="original_source_url" required></label><br>
  <button type="submit">Add Project</button>
</form>
