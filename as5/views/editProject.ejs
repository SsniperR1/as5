<%- include('partials/navbar', { page: '' }) %>

<h1>Edit Project: <%= project.title %></h1>

<form method="POST" action="/solutions/editProject">
  <input type="hidden" name="id" value="<%= project.id %>">
  <label>Title: <input type="text" name="title" value="<%= project.title %>" required></label><br>
  <label>Feature Image URL: <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required></label><br>
  <label>Sector:
    <select name="sector_id" required>
      <% sectors.forEach(sector => { %>
        <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>><%= sector.sector_name %></option>
      <% }) %>
    </select>
  </label><br>
  <label>Intro Short: <textarea name="intro_short" required><%= project.intro_short %></textarea></label><br>
  <label>Summary Short: <textarea name="summary_short" required><%= project.summary_short %></textarea></label><br>
  <label>Impact: <textarea name="impact" required><%= project.impact %></textarea></label><br>
  <label>Original Source URL: <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required></label><br>
  <button type="submit">Update Project</button>
</form>
<a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error">Delete Project</a>
